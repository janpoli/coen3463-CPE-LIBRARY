extends layout

block content
    // Navigation
    #navigation
      nav.navbar.navbar-custom(role='navigation')
        .container
          .row
            .col-md-2
              .site-logo
                a.brand(href='index.html') CpE Library
            .col-md-10
              // Brand and toggle get grouped for better mobile display
              .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='#menu')
                  i.fa.fa-bars
              // Collect the nav links, forms, and other content for toggling
              #menu.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                  li.active
                    a(href='/') Home
                  li
                    a(href='/access') List
                  li
                    a(href='/libs/add') Add Subject
                  li
                    a(href='/libs/edit/users') Accounts
                  li
                    a(href='/auth/logout') Logout
              // /.Navbar-collapse
        // /.container
    // /Navigation

    section#list.home-section.color-dark.bg-white
        .container
          .row
            .headx
                h2 Edit Item
                .divider-headerX
          .container
            .headx
              form(method="POST", action="/libs/#{update._id}/update")
                // Header
                .text-center
                  hr.mt-2.mb-2
                // Body
                
                br
                // Body
                .md-form
                  i.fa.prefix
                  input#form3.form-control(type='text', name="name", value="#{update.name}")
                  label(for='form3') Subject Name*
                .md-form
                  i.fa.prefix
                  input#form2.form-control(type='text', name="code", value="#{update.code}")
                  label(for='form2') Subject Code*
                .md-form
                  i.fa.prefix
                  input#form32.form-control(type='text', name="year", value="#{update.year}")
                  label(for='form32') Subject Year*
                .md-form
                  i.fa.prefix
                  input#form34.form-control(type='text', name="sem", value="#{update.sem}")
                  label(for='form34') Subject Sem*
                .text-center
                  button.btn.btn-default(type="submit") Save
                  a.btn.btn-primary(href='/access/#{update._id}') Cancel
                  a.btn.btn-danger(href='/libs/#{update._id}/Delete') Delete
                br
              table.table
                  thead
                    tr
                      th Item Description
                      th Item Type
                      th Upload Date
                      th Action
                  tbody
                    for item in items
                      if (item.lib === update.code)
                        tr
                          td 
                            a(href="#{item.link}" target="_blank") #{item.description}
                          td #{item.type}
                          td #{moment(item.createdate).format("LLL")}
                          td
                            a.red-text(href="/libs/delete/#{update._id}/#{item._id}")
                              button.btn.btn-danger
                                | Delete




